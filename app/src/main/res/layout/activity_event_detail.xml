<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#363636"
    tools:context=".ui.event.EventDetailActivity">

    <ImageView
        android:id="@+id/detailEventImage"
        android:layout_width="159dp"
        android:layout_height="211dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:contentDescription="@string/image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailEventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="공연 장소"
                        android:textSize="16sp"
                        android:textColor="#ffffff"/>
                    <TextView
                        android:id="@+id/detailEventLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Location"
                        android:textSize="16sp"
                        android:textColor="#ffffff"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="공연 기간"
                        android:textSize="16sp"
                        android:textColor="#ffffff" />
                    <TextView
                        android:id="@+id/detailEventDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Date"
                        android:textSize="16sp"
                        android:textColor="#ffffff"/>
                </TableRow>

            </TableLayout>
        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/likeButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/saveButton"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_like" />

            <ImageView
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintStart_toEndOf="@id/likeButton"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_save" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>
